.container.main-wrapper
  = form_for [:admins, @survey], html: { class: "form-horizontal" } do |f|
    = render partial: "partial/errors", locals: {instance: @survey}
    h2.page-header
      = f.text_field :title, value: '無題のアンケート', autofocus: true
    .row
      .survey_form.col-md-12
        .form_group
          = f.text_area :description, placeholder: 'アンケートの説明', class: "form-control col-md-12 question-description"
      .questions-wrapper.col-md-12
        .question-wrapper
          .form-group
            .col-md-6
              = text_field :question, :description, value: '無題の質問', name:'questions[][description]', class: "form-control"
            .col-md-4
              .ui-select
                = select :question, :question_type, Question.question_types.keys.to_a, {} ,
                  class: 'form-control', data: {"question-number" =>1}, id:"question1_question_type",
                  name:'questions[][question_type]'
          .form-group
            .col-md-8
              .question_field id="question1"
                = text_field :answer, :description, placeholder: '自由記述（短文回答）', class: "form-control"
      .form-group.col-md-8
        .new-survey-buttons
          = f.submit "作成", class: "btn btn-primary submit-answer"
          input.btn.btn-default.add_question value="質問追加"
